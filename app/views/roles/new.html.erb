 <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">New Role</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
                <a href="/roles/new" class="btn btn-sm btn-outline-secondary">New Role</a>
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
                This week
            </button>
        </div>
    </div>

   
    <%= form_with model: @role do |form| %>
        <div>
            <%= form.label :title %><br>
            <%= form.text_field :title %>
            <% @role.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>

        <div>
            <%= form.label :description %><br>
            <%= form.text_area :description %><br>
            <% @role.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>

        <div>
            <%= form.submit %>
        </div>
    <% end %>
</main>
